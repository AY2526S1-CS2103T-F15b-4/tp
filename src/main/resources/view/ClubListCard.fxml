<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="140">
            <padding>
                <Insets bottom="5" left="15" right="5" top="5" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="0.5">
                <Label fx:id="id" styleClass="cell_big_label">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
                </Label>
                <Label fx:id="name" styleClass="cell_big_label" text="\$first">
               <font>
                  <Font size="16.0" />
               </font></Label>
            </HBox>
            <FlowPane fx:id="keywords" />

            <HBox fx:id="phoneRow" alignment="CENTER_LEFT" spacing="8" styleClass="field-row">
                <ImageView fitHeight="16" fitWidth="16">
                    <image>
                        <Image url="@/images/phone.png" />
                    </image>
                </ImageView>
                <Label fx:id="phone" styleClass="cell_small_label" />
            </HBox>

            <HBox fx:id="addressRow" alignment="CENTER_LEFT" spacing="8" styleClass="field-row">
                <ImageView fitHeight="16" fitWidth="16">
                    <image>
                        <Image url="@/images/address.png" />
                    </image>
                </ImageView>
                <Label fx:id="address" styleClass="cell_small_label" wrapText="true" />
            </HBox>

            <HBox fx:id="emailRow" alignment="CENTER_LEFT" spacing="8" styleClass="field-row">
                <ImageView fitHeight="16" fitWidth="16">
                    <image>
                        <Image url="@/images/email.png" />
                    </image>
                </ImageView>
                <Label fx:id="email" styleClass="cell_small_label" />
            </HBox>
        </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
    </GridPane>
    <VBox alignment="CENTER" prefWidth="70" styleClass="member-badge">
        <Label text="Members" styleClass="badge-title"/>
        <Label fx:id="memberCount" text="42" styleClass="badge-count"/>
    </VBox>
</HBox>
